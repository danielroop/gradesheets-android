<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roopsays.gradesheet"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <!--  This is only necessary for the AD Version 
	<uses-permission android:name="android.permission.INTERNET"/>
  	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
		<meta-data android:name="com.google.android.gms.version"
               android:value="@integer/google_play_services_version"/>
        
        <activity
            android:name="com.roopsays.gradesheet.foundation.GradeSheetHomePage"
            android:label="@string/title_gradesheet_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.roopsays.gradesheet.foundation.GradeSheet"
            android:label="@string/title_gradesheet_detail"
            android:parentActivityName="com.roopsays.gradesheet.GradeSheetHomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GradeSheetListActivity" />
        </activity>
        <activity
            android:name="com.roopsays.gradesheet.foundation.SettingsActivity"
            android:label="@string/title_activity_settings"             
            android:parentActivityName="com.roopsays.gradesheet.foundation.GradeSheetHomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GradeSheetListActivity" />
            
        </activity>
        
		<activity android:name="com.google.android.gms.ads.AdActivity"
             android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

</manifest>