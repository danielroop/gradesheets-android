<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roopsays.gradesheet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.roopsays.gradesheet.GradeSheetHomePage"
            android:label="@string/title_gradesheet_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.roopsays.gradesheet.GradeSheet"
            android:label="@string/title_gradesheet_detail"
            android:parentActivityName="com.roopsays.gradesheet.GradeSheetHomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GradeSheetListActivity" />
        </activity>
        <activity
            android:name="com.roopsays.gradesheet.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>